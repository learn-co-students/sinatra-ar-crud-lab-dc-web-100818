<form action='/posts/<%= @post.id %>' method='POST'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  Post Title: <input type="text" name="name" value="<%= @post.name %>"><br><br>
  Post Content: <input type="text" name="content" value="<%= @post.content %>"><br><br>
  <input type="submit" value='submit'>
</form>
